{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "BambooHR Spec",
    "type": "object",
    "required": [
      "api_key",
      "domain"
    ],
    "additionalProperties": false,
    "properties": {
      "api_key": {
        "type": "string",
        "title": "clientID",
        "description": "BambooHR Client ID",
        "airbyte_secret": true
      },
      "domain": {
        "type": "string",
        "title": "client secret",
        "description": "BambooHR Client Secret",
        "airbyte_secret": true
      },
      "version": {
        "type": "string",
        "title": "Api version",
        "description": "BambooHR API Version",
        "default": "v1"
      }
    }
  }
}
